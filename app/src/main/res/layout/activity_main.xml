<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/activity_main_materialcalendarview_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_arrowColor="#000000"
        app:mcv_leftArrowMask="@drawable/ic_arrow_calendar_left"
        app:mcv_rightArrowMask="@drawable/ic_arrow_calendar_right"
        app:mcv_selectionColor="#000000"
        app:mcv_titleAnimationOrientation="horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>